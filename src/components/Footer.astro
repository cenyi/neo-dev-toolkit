---
const { t = {} } = Astro.props;
const currentPath = Astro.url.pathname;
const currentYear = new Date().getFullYear();

// 支持的所有语言
const supportedLangs = ['zh', 'ja', 'ko', 'es', 'pt', 'fr', 'de', 'ru', 'ar'];

// 检测当前语言前缀
let currentLang = 'en';
let langPrefix = '';

for (const lang of supportedLangs) {
  if (currentPath.startsWith(`/${lang}`)) {
    currentLang = lang;
    langPrefix = `/${lang}`;
    break;
  }
}
---

<footer class="footer">
  <div class="footer-content">
    <div class="footer-brand">
      <h3 class="brand-logo">JSON Viewer</h3>
      <p class="brand-description" set:html={t.footerDescription || 'Powerful online JSON formatter, validator, and converter. Support JSON, URL params, XML, YAML conversion with 100% browser-based security.'} />
    </div>

    <div class="footer-section">
      <h4>{t.navProduct || 'Product'}</h4>
      <ul>
        <li><a href={langPrefix || '/'}>{t.navHome || 'Home'}</a></li>
        <li><a href="#" onclick="event.preventDefault(); showToolsComingSoon();">{t.navTools || 'Tools'}</a></li>
      </ul>
    </div>

    <div class="footer-section">
      <h4>{t.navCompany || 'Company'}</h4>
      <ul>
        <li><a href={langPrefix + '/about'}>{t.navAbout || 'About'}</a></li>
        <li><a href={langPrefix + '/contact'}>{t.navContact || 'Contact'}</a></li>
      </ul>
    </div>

    <div class="footer-section">
      <h4>{t.navLegal || 'Legal'}</h4>
      <ul>
        <li><a href={langPrefix + '/privacy'}>{t.navPrivacy || 'Privacy Policy'}</a></li>
        <li><a href={langPrefix + '/terms'}>{t.navTerms || 'Terms of Service'}</a></li>
      </ul>
    </div>
  </div>

  <div class="footer-bottom">
    <p>&copy; {currentYear} JSON Viewer. All rights reserved.</p>
  </div>
</footer>

<style>
  .footer {
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    border-top: 1px solid #e5e7eb;
    padding: 40px 20px 20px;
    margin-top: auto;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 2fr repeat(3, 1fr);
    gap: 32px;
  }

  .footer-brand {
    padding-right: 20px;
  }

  .brand-logo {
    font-size: 1.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 12px;
    letter-spacing: -0.03em;
  }

  .brand-description {
    color: #64748b;
    font-size: 0.875rem;
    line-height: 1.6;
    margin-bottom: 16px;
    max-width: 280px;
  }

  .footer-brand .social-links {
    display: flex;
    gap: 12px;
  }

  .footer-brand .social-links a {
    color: #64748b;
    transition: all 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 8px;
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    border: 1px solid #e5e7eb;
  }

  .footer-brand .social-links a:hover {
    color: #3b82f6;
    background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
    border-color: #cbd5e1;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.2);
  }

  .footer-section h4 {
    font-size: 0.875rem;
    font-weight: 700;
    color: #0f172a;
    margin-bottom: 16px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-section li {
    margin-bottom: 8px;
  }

  .footer-section a {
    color: #64748b;
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s;
    display: block;
  }

  .footer-section a:hover {
    color: #3b82f6;
  }

  .footer-bottom {
    max-width: 1200px;
    margin: 32px auto 0;
    padding-top: 24px;
    border-top: 1px solid #e5e7eb;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 16px;
  }

  .footer-bottom p {
    color: #64748b;
    font-size: 0.8125rem;
    margin: 0;
  }

  .social-links {
    display: flex;
    gap: 16px;
  }

  .social-links a {
    color: #64748b;
    transition: color 0.2s;
    display: flex;
    align-items: center;
  }

  .social-links a:hover {
    color: #3b82f6;
  }

  /* 移动端优化 */
  @media (max-width: 768px) {
    .footer {
      padding: 32px 16px 16px;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .footer-brand {
      padding-right: 0;
      text-align: center;
    }

    .brand-description {
      max-width: 100%;
      margin-left: auto;
      margin-right: auto;
    }

    .footer-brand .social-links {
      justify-content: center;
    }

    .footer-bottom {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 20px;
    }
  }
</style>

<script is:global>
  function showToolsComingSoon() {
    const currentLang = window.appState.lang || 'en';
    const messages = {
      zh: '工具正在开发中，敬请期待...',
      ja: 'ツールは開発中です。もうしばらくお待ちください...',
      ko: '도구 개발 중입니다. 기다려 주세요...',
      es: 'Las herramientas están en desarrollo, estén atentos...',
      pt: 'Ferramentas em desenvolvimento, fiquem atentos...',
      fr: 'Outils en développement, restez à l\'écoute...',
      de: 'Tools sind in Entwicklung, bleiben Sie dran...',
      ru: 'Инструменты в разработке, оставайтесь с нами...',
      ar: 'الأدوات قيد التطوير، ترقبوا...'
    };
    alert(messages[currentLang] || 'Tools are under development, please stay tuned...');
  }

  function switchLanguage() {
    const currentLang = window.appState.lang || 'en';
    const supportedLangs = ['en', 'zh', 'ja', 'ko', 'es', 'pt', 'fr', 'de', 'ru', 'ar'];
    const currentPath = window.location.pathname;

    // 获取不带语言前缀的路径
    let pathWithoutLang = currentPath;
    for (const lang of supportedLangs) {
      if (lang !== 'en' && currentPath.startsWith(`/${lang}`)) {
        pathWithoutLang = currentPath.substring(lang.length + 1) || '/';
        break;
      }
    }

    // 显示语言选择菜单
    const langNames = {
      en: 'English',
      zh: '简体中文',
      ja: '日本語',
      ko: '한국어',
      es: 'Español',
      pt: 'Português',
      fr: 'Français',
      de: 'Deutsch',
      ru: 'Русский',
      ar: 'العربية'
    };

    let message = '选择语言 / Select Language:\n\n';
    supportedLangs.forEach((lang, index) => {
      message += `${index + 1}. ${langNames[lang]} (${lang})\n`;
    });
    message += '\n请输入数字 (1-10) / Enter number (1-10):';

    const choice = prompt(message);
    if (choice !== null) {
      const index = parseInt(choice) - 1;
      if (index >= 0 && index < supportedLangs.length) {
        const newLang = supportedLangs[index];
        let newPath;

        if (newLang === 'en') {
          newPath = pathWithoutLang;
        } else {
          newPath = `/${newLang}${pathWithoutLang === '/' ? '' : pathWithoutLang}`;
        }

        window.location.href = newPath;
      }
    }
  }
</script>
