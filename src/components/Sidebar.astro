<script is:global>
  function toggleSidebar() {
    const sidebar = document.getElementById('sidebar');
    const main = document.querySelector('main');
    const navMenu = sidebar.querySelector('.nav-menu');

    // æ£€æŸ¥æ˜¯å¦æ˜¯ç§»åŠ¨ç«¯
    const isMobile = window.innerWidth <= 768;

    if (isMobile) {
      // ç§»åŠ¨ç«¯ï¼šåˆ‡æ¢èœå•æ˜¾ç¤º/éšè—
      navMenu.classList.toggle('mobile-open');
    } else {
      // æ¡Œé¢ç«¯ï¼šåˆ‡æ¢ä¾§è¾¹æ æŠ˜å çŠ¶æ€
      sidebar.classList.toggle('collapsed');

      // æ›´æ–°ä¸»å†…å®¹åŒºåŸŸçš„ margin-left
      if (sidebar.classList.contains('collapsed')) {
        main.style.marginLeft = 'var(--sidebar-collapsed-width)';
        // ä¿å­˜æŠ˜å çŠ¶æ€åˆ° localStorage
        localStorage.setItem('sidebarCollapsed', 'true');
      } else {
        main.style.marginLeft = 'var(--sidebar-width)';
        // ä¿å­˜å±•å¼€çŠ¶æ€åˆ° localStorage
        localStorage.setItem('sidebarCollapsed', 'false');
      }

      // æ›´æ–°å…¨å±€çŠ¶æ€
      window.appState.sidebarCollapsed = sidebar.classList.contains('collapsed');
    }
  }

  function switchLanguage() {
    // åˆ‡æ¢è¯­è¨€
    const currentLang = window.appState.lang;
    const newLang = currentLang === 'en' ? 'zh' : 'en';
    window.appState.lang = newLang;

    // è·å–å½“å‰è·¯å¾„
    const currentPath = window.location.pathname;

    // æ„å»ºæ–°è·¯å¾„
    let newPath;
    if (newLang === 'en') {
      // è‹±æ–‡ï¼šç§»é™¤ /zh å‰ç¼€
      if (currentPath.startsWith('/zh')) {
        newPath = currentPath.substring(3) || '/';
      } else {
        newPath = currentPath;
      }
    } else {
      // ä¸­æ–‡ï¼šæ·»åŠ  /zh å‰ç¼€
      if (currentPath.startsWith('/zh')) {
        newPath = currentPath;
      } else {
        newPath = '/zh' + (currentPath === '/' ? '' : currentPath);
      }
    }

    // è·³è½¬åˆ°æ–°è·¯å¾„
    window.location.href = newPath;
  }

  function toggleTheme() {
    // åˆ‡æ¢æ·±è‰²/æµ…è‰²ä¸»é¢˜
    const html = document.documentElement;
    const currentTheme = html.getAttribute('data-theme');
    const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

    console.log('åˆ‡æ¢ä¸»é¢˜:', currentTheme, '->', newTheme);
    
    // ç§»é™¤æ—§ä¸»é¢˜ç±»ï¼Œæ·»åŠ æ–°ä¸»é¢˜ç±»
    html.removeAttribute('data-theme');
    // å¼ºåˆ¶æµè§ˆå™¨é‡ç»˜
    html.offsetHeight;
    // è®¾ç½®æ–°ä¸»é¢˜
    html.setAttribute('data-theme', newTheme);

    // ä¿å­˜åˆ° localStorage
    localStorage.setItem('theme', newTheme);

    // æ›´æ–°å…¨å±€çŠ¶æ€
    if (window.appState) {
      window.appState.theme = newTheme;
    }

