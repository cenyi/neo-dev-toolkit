  }
</style>

<script is:global>
  function toggleSidebar() {
    const sidebar = document.getElementById('sidebar');
    const main = document.querySelector('main');
    sidebar.classList.toggle('collapsed');

    // æ›´æ–°ä¸»å†…å®¹åŒºåŸŸçš„ margin-left
    if (sidebar.classList.contains('collapsed')) {
      main.style.marginLeft = 'var(--sidebar-collapsed-width)';
      // ä¿å­˜æŠ˜å çŠ¶æ€åˆ° localStorage
      localStorage.setItem('sidebarCollapsed', 'true');
    } else {
      main.style.marginLeft = 'var(--sidebar-width)';
      // ä¿å­˜å±•å¼€çŠ¶æ€åˆ° localStorage
      localStorage.setItem('sidebarCollapsed', 'false');
    }

    // æ›´æ–°å…¨å±€çŠ¶æ€
    window.appState.sidebarCollapsed = sidebar.classList.contains('collapsed');
  }

  function switchLanguage() {
    // åˆ‡æ¢è¯­è¨€
    const currentLang = window.appState.lang;
    const newLang = currentLang === 'en' ? 'zh' : 'en';
    window.appState.lang = newLang;

    // è·å–å½“å‰è·¯å¾„
    const currentPath = window.location.pathname;

    // æ„å»ºæ–°è·¯å¾„
    let newPath;
    if (newLang === 'en') {
      // è‹±æ–‡ï¼šç§»é™¤ /zh å‰ç¼€
      if (currentPath.startsWith('/zh')) {
        newPath = currentPath.substring(3) || '/';
      } else {
        newPath = currentPath;
      }
    } else {
      // ä¸­æ–‡ï¼šæ·»åŠ  /zh å‰ç¼€
      if (currentPath.startsWith('/zh')) {
        newPath = currentPath;
      } else {
        newPath = '/zh' + (currentPath === '/' ? '' : currentPath);
      }
    }

    // è·³è½¬åˆ°æ–°è·¯å¾„
    window.location.href = newPath;
  }

  // åˆå§‹åŒ–æ—¶è®¾ç½®ä¸»å†…å®¹åŒºåŸŸçš„ margin-leftï¼ˆä¸ä¾§è¾¹æ çŠ¶æ€ä¿æŒä¸€è‡´ï¼‰
  window.addEventListener('DOMContentLoaded', () => {
    const sidebar = document.getElementById('sidebar');
    const main = document.querySelector('main');

    // æ ¹æ®ä¾§è¾¹æ çš„å½“å‰çŠ¶æ€è®¾ç½® main çš„ margin-left
    if (sidebar.classList.contains('collapsed')) {
      main.style.marginLeft = 'var(--sidebar-collapsed-width)';
      window.appState.sidebarCollapsed = true;
    } else {
      main.style.marginLeft = 'var(--sidebar-width)';
      window.appState.sidebarCollapsed = false;
    }
  });
</script>