---
import Footer from '../components/Footer.astro';

const { title = "默认标题", lang = "zh-CN", description = "", keywords = "", canonical = "", ogType = "website", ogImage = "/og-image.png" } = Astro.props;

// 根据语言设置默认描述和关键词
const defaultDescription = lang === 'zh-CN'
  ? "免费的在线JSON格式化、验证和转换工具。支持JSON、URL参数、XML、YAML格式互转，提供字段提取、TypeScript接口生成等功能。100%浏览器本地运行，数据安全无忧。"
  : "Free online JSON formatter, validator, and converter. Support JSON, URL params, XML, YAML conversion with field extraction, TypeScript generation. 100% browser-based, secure and private.";

// 导入翻译
import { locales } from '../i18n/locales.js';
const t = locales[lang === 'zh-CN' ? 'zh' : 'en'] || locales.en;

const defaultKeywords = lang === 'zh-CN'
  ? "JSON格式化,JSON校验,JSON在线工具,JSON解析器,JSON转XML,JSON转YAML,JSON转TypeScript,URL参数解析,在线JSON编辑器,免费JSON工具"
  : "JSON formatter, JSON validator, JSON parser, JSON to XML, JSON to YAML, JSON to TypeScript, URL params parser, online JSON editor, free JSON tool, JSON viewer";

const pageDescription = description || defaultDescription;
const pageKeywords = keywords || defaultKeywords;
const currentUrl = canonical || Astro.url.href;
const siteName = lang === 'zh-CN' ? "JSON Viewer" : "JSON Viewer";

// 计算语言alternates
const path = Astro.url.pathname;
const isZhPage = path.startsWith('/zh');

// 生成alternate URL
const enUrl = isZhPage
  ? `https://jsonviewer.online${path.replace('/zh', '') || '/'}`
  : `https://jsonviewer.online${path}`;

const zhUrl = isZhPage
  ? `https://jsonviewer.online${path}`
  : `https://jsonviewer.online/zh${path === '/' ? '' : path}`;

// 默认语言指向英文版
const defaultUrl = enUrl;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="manifest" href="/site.webmanifest">

    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <!-- SEO Meta Tags -->
    <meta name="description" content={pageDescription} />
    <meta name="keywords" content={pageKeywords} />
    <meta name="author" content="JSON Viewer Team" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={currentUrl} />

    <!-- Hreflang Tags for International SEO -->
    <link rel="alternate" hreflang="en" href={enUrl} />
    <link rel="alternate" hreflang="zh-CN" href={zhUrl} />
    <link rel="alternate" hreflang="x-default" href={defaultUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content={lang === 'zh-CN' ? "zh_CN" : "en_US"} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={currentUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Additional SEO -->
    <meta name="theme-color" content="#2563eb" />
    <meta name="msapplication-TileColor" content="#2563eb" />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-VBZG7E1Z6Y"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-VBZG7E1Z6Y');
    </script>

    <!-- Microsoft Clarity -->
    <script type="text/javascript">
      (function(c,l,a,r,i,t,y){
        c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
        t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
        y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
      })(window, document, "clarity", "script", "v5895n6j2c");
    </script>

    <style>
      :root {
        --sidebar-width: 200px;
        --sidebar-collapsed-width: 56px;
        --primary-color: #2563eb;
        --secondary-color: #f1f3f5;
        --text-color: #1f2937;
        --bg-color: #ffffff;
        --border-color: #e5e7eb;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        /* 添加主题过渡效果 */
        transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        background-color: var(--bg-color);
        color: var(--text-color);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      .layout-container {
        display: flex;
        flex: 1;
      }

      main {
        flex: 1;
        padding: 16px;
        overflow-y: auto;
        transition: margin-left 0.25s cubic-bezier(0.4, 0, 0.2, 1);
        background: #fafbfc;
        margin-left: var(--sidebar-width);
      }

      /* 自定义滚动条 */
      main::-webkit-scrollbar,
      .json-output::-webkit-scrollbar,
      .extracted-output::-webkit-scrollbar {
        width: 8px;
        height: 8px;
      }

      main::-webkit-scrollbar-track,
      .json-output::-webkit-scrollbar-track,
      .extracted-output::-webkit-scrollbar-track {
        background: transparent;
      }

      main::-webkit-scrollbar-thumb,
      .json-output::-webkit-scrollbar-thumb,
      .extracted-output::-webkit-scrollbar-thumb {
        background: #d1d5db;
        border-radius: 4px;
      }

      main::-webkit-scrollbar-thumb:hover,
      .json-output::-webkit-scrollbar-thumb:hover,
      .extracted-output::-webkit-scrollbar-thumb:hover {
        background: #9ca3af;
      }

      /* 移动端响应式布局 */
      @media (max-width: 768px) {
        main {
          margin-left: 0;
          margin-top: var(--sidebar-height, 60px);
          padding: 12px;
          height: calc(100vh - var(--sidebar-height, 60px));
        }
      }

      @media (max-width: 480px) {
        main {
          padding: 8px;
        }
      }
    </style>
    <script>
      // 全局状态管理
      window.appState = {
        sidebarCollapsed: false,
        lang: 'en'
      };

      // 从路径判断当前语言设置
      const currentPath = window.location.pathname;
      if (currentPath.startsWith('/zh')) {
        window.appState.lang = 'zh';
      } else {
        window.appState.lang = 'en';
      }
    </script>
  </head>
  <body>
    <div class="layout-container">
      <slot name="sidebar" />
      <main>
        <slot />
      </main>
    </div>
    <Footer t={t} />
  </body>
</html>