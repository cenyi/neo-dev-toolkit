  }

  .contact-icon {
    font-size: 3rem;
    margin-bottom: 20px;
  }

  .contact-card h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: inherit;
    margin-bottom: 15px;
  }

  .contact-email {
    font-size: 1.75rem;
    font-weight: 700;
    color: #2563eb;
    margin: 20px 0;
  }

  .contact-card.primary .contact-email {
    color: white;
  }

  .contact-desc {
    color: #6b7280;
    margin-bottom: 20px;
    line-height: 1.6;
  }

  .contact-card.primary .contact-desc {
