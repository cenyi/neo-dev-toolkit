    margin-bottom: 80px;
  }

  section h2 {
    font-size: 2.25rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 40px;
    text-align: center;
  }

  /* Contact Methods */
  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 30px;
  }

  .contact-card {
    background: white;
    padding: 40px;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    text-align: center;
    border: 2px solid transparent;
    transition: all 0.3s;
  }

  .contact-card:hover {
    border-color: #2563eb;
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
  }

  .contact-card.primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
