---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Sidebar from '../../components/Sidebar.astro';
import ruTranslations from '../../i18n/locales/ru.js';

const t = ruTranslations;
---

<BaseLayout title={`${t.aboutTitle} - ${t.title}`} lang="ru">
  <Sidebar slot="sidebar" t={t} />

  <div class="about-container">
    <h1>{t.aboutHeading}</h1>
    <p>{t.aboutIntro}</p>

    <h2>{t.aboutFeaturesTitle}</h2>
    <ul>
      <li>{t.aboutFeature1}</li>
      <li>{t.aboutFeature2}</li>
      <li>{t.aboutFeature3}</li>
      <li>{t.aboutFeature4}</li>
      <li>{t.aboutFeature5}</li>
    </ul>

    <h2>{t.aboutTechStackTitle}</h2>
    <p>{t.aboutTechStackDesc}</p>
  </div>
</BaseLayout>

<style>
  .about-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 40px 30px;
  }
  .about-container h1 {
    color: var(--text-color);
    margin-bottom: 20px;
  }
  .about-container h2 {
    color: var(--text-color);
    margin: 20px 0 10px;
  }
  .about-container p {
    margin-bottom: 15px;
    line-height: 1.6;
  }
  .about-container ul {
    margin-left: 20px;
    margin-bottom: 20px;
  }
  .about-container li {
    margin-bottom: 8px;
    line-height: 1.6;
  }
</style>
